#!/bin/bash
PACKAGE_NAME="docker-compose"

# Installation function
function install {
	apt install apt-transport-https ca-certificates curl software-properties-common -y
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add -
    add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu bionic stable"
    apt-get update
    apt-get install $PACKAGE_NAME-ce -y
}

# Checks if pacakge is installed and aborts if already exists.
function check_package_status {
	if $UTIL/check_installation $PACKAGE_NAME; then
		echo "Already installed: $PACKAGE_NAME"
		exit 0
	else
		echo "Installing: $PACKAGE_NAME"
	fi
}

# Check if installation was successful, if not it aborts.
function test_installation {
	if $UTIL/check_installation $PACKAGE_NAME; then
		echo "Installation successful: $PACKAGE_NAME"
		exit 0
	else
		exit 1
		echo "Installation failed: $PACKAGE_NAME"
	fi
}

# Execution
check_package_status	# Check if installed
install			# Install package if missing
test_installation	# Test if installation was successful
